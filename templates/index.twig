{% extends 'base.twig' %}

{% block main %}
<div class="nom_titre">
        <h2 class="titre">Derniers articles</h2>
</div>
<div class="vetement">
        {% for vetement in vetements %}
        <div class="pose_vet">
                <a href="vet_detail.php?id={{vetement.id_vetement}}" class="vet_index">
                        <div class="carte">
                                <h3>{{vetement.nom_vet}}</h3>
                                <p><img src="{{vetement.photo_vet}}" alt="vetements"></p>
                                <p class="prix">{{vetement.prix_vet}}€</p>
                        </div>
                </a>
        </div>
        {% endfor %}
</div>
<div class="place_bouton">
        <a href="vetements.php" class="bouton">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
